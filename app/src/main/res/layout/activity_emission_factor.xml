<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmissionFactorActivity">

    <Button
        android:id="@+id/ref_base_button_treat"
        android:layout_width="81dp"
        android:layout_height="48dp"
        android:layout_marginTop="120dp"
        android:onClick="onClick"
        android:text="Змінити"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <Button
        android:id="@+id/ref_base_button_untreat"
        android:layout_width="81dp"
        android:layout_height="48dp"
        android:layout_marginTop="180dp"
        android:onClick="onClick"
        android:text="Змінити"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <Button
        android:id="@+id/ref_base_button_petrol"
        android:layout_width="81dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:onClick="onClick"
        android:text="Змінити"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <Button
        android:id="@+id/ref_base_button_activ"
        android:layout_width="81dp"
        android:layout_height="48dp"
        android:layout_marginTop="232dp"
        android:onClick="onClick"
        android:text="Змінити"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <Button
        android:id="@+id/ref_base_button_diesel"
        android:layout_width="81dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:onClick="onClick"
        android:text="Змінити"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:lines="2"
        android:text="*10^"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintStart_toEndOf="@+id/treat_koph"
        app:layout_constraintTop_toBottomOf="@+id/textView19"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:lines="2"
        android:text="*10^"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintStart_toEndOf="@+id/untreat_koph"
        app:layout_constraintTop_toBottomOf="@+id/textView20"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:lines="2"
        android:text="*10^"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintStart_toEndOf="@+id/activ_koph"
        app:layout_constraintTop_toBottomOf="@+id/textView21"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/petrol_koph"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="8dp"
        android:ems="8"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <EditText
        android:id="@+id/petrol_koph1"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:ems="8"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textView18"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <EditText
        android:id="@+id/diesel_koph"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:ems="8"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/petrol_koph" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="127dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:lines="2"
        android:text="Коеф. емісії бензина"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:lines="2"
        android:text="*10^"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintStart_toEndOf="@+id/petrol_koph"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:lines="2"
        android:text="*10^"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintStart_toEndOf="@+id/diesel_koph"
        app:layout_constraintTop_toBottomOf="@+id/textView18"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="172dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:lines="2"
        android:text="Коеф. емісії дизеля"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

    </Spinner>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="169dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:lines="2"
        android:text="Коеф. емісії очищ. стічних вод"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="172dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:lines="2"
        android:text="Коеф. емісії неочищ. стічних вод"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="172dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:lines="2"
        android:text="Коеф. емісії стічних вод с АМ"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="350dp"
        android:layout_height="168dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:lines="7"
        android:text="Коеф. емісії за замовченням \n\nБензин = 2.2*10^(-6) \nДизель = 0.1*10^(-6) \nОч. стічні води = 1*10^(-11) \nНеоч. стічні води = 0.5*10^(-8) \nСтічні води с АМ = 0.2*10^(-3)"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/diesel_koph1"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:ems="8"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textView19"
        app:layout_constraintTop_toBottomOf="@+id/petrol_koph1" />

    <EditText
        android:id="@+id/treat_koph"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="11dp"
        android:ems="8"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/diesel_koph" />

    <EditText
        android:id="@+id/treat_koph1"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginTop="11dp"
        android:ems="8"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textView20"
        app:layout_constraintTop_toBottomOf="@+id/diesel_koph1" />

    <EditText
        android:id="@+id/untreat_koph"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:ems="8"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/treat_koph" />

    <EditText
        android:id="@+id/untreat_koph1"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:ems="8"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textView21"
        app:layout_constraintTop_toBottomOf="@+id/treat_koph1" />

    <EditText
        android:id="@+id/activ_koph"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginTop="9dp"
        android:ems="8"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/untreat_koph" />

    <EditText
        android:id="@+id/activ_koph1"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginTop="9dp"
        android:ems="8"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textView22"
        app:layout_constraintTop_toBottomOf="@+id/untreat_koph1" />

</androidx.constraintlayout.widget.ConstraintLayout>